<article class="review">
  <header class="review_header">
    <%= review.user.first_name %>: <%= review.description %>    
  </header>
  <footer class="review_footer">
    Rating: <%= review.rating %> 
    <br/>
    <% if user_id == review.user.id %>
        <%= link_to fa_icon('trash'), product_review_path(@product.id, review.id), class: 'btn btn-sm btn-danger review_button', :confirm => "Are you sure you want to delete this review?", :method => :delete %>
    <% end %>
  </footer>
</article>
